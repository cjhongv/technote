<% if (!searchOptions.title) { %> 
<% searchOptions.title = '' %> 
<% } %> 
<h1 class="mb-4">My Tech Notes</h1>

<div class="col02">
	<a href="/articles/new" class='btn btn-success'>New Article</a>

	<form action="/articles" method="GET" id="form">
		<div class="input-group">
			<div class="form-outline w-100">
				<input type="search" name="title" id="search" placeholder="Search for Title" value="<%= searchOptions.title%>" class="form-control">
			</div>
			<button type="submit" id="btn" class="btn btn-primary">
				<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
					<path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
				</svg>
			</button>
		</div>
	</form>	
</div>

<% articles.forEach(article => {%> 
	<div class="card mt-4">
		<div class="card-body">
			<h4 class="card-title"><%= article.title %></h4>
			<div class="card-subtitle text-muted mb-2">
				<%= article.createdAt.toLocaleDateString() %>
			</div>
			<div class="card-text mb-2"><%= article.description %></div>
			<a href="articles/<%= article.slug %>" class="btn btn-primary">Read More</a>
			<a href="articles/edit/<%= article.id %>" class="btn btn-info">Edit</a>
			<form action="/articles/<%= article.id %>?_method=DELETE" method="POST" class="d-inline">
				<button class="btn btn-danger" type="submit">Delete</button>
			</form>
		</div>
	</div>
<% })  %> 